# .terraform-docs.yml
formatter: markdown
version: ""  # This will be dynamically updated in the workflow

header-from: ""
footer-from: ""
recursive:
  enabled: false
  path: ""
  include-main: true

sections:
  hide:
    - header
    - footer
    - dependencies
    - modules
  show:
    - inputs
    - outputs
    - resources
    - providers

output:
  file: ""
  mode: inject
  template: |
    <!-- BEGIN_TF_DOCS -->
    {{ .Content }}
    <!-- END_TF_DOCS -->
